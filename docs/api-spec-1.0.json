      "patch": {
        "tags": [
          "/tasks"
        ],
        "description": "할일을 수정하는 API입니다",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "할일 고유 아이디",
            "required": true,
            "type": "string"
          },
          {
            "name": "userid",
            "in": "header",
            "description": "사용자 ID",
            "required": true,
            "type": "string",
            "example": "QVB0FFA4N45NSUJE"
          },
          {
            "name": "taskDate",
            "in": "formData",
            "description": "할일 날짜 (YYYY-MM-DD)",
            "required": false,
            "type": "string",
            "example": "2021-09-21"
          },
          {
            "name": "dispSeq",
            "in": "formData",
            "description": "할일 순서",
            "required": false,
            "type": "string",
