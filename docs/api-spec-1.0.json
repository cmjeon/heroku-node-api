        "tags": [
          "/tasks"
        ],
        "description": "할일을 생성하는 API입니다",
        "parameters": [
          {
            "name": "userid",
            "in": "header",
            "description": "사용자 ID",
            "required": true,
            "type": "string",
            "example": "QVB0FFA4N45NSUJE"
          },
          {
            "name": "taskDate",
            "in": "formData",
            "description": "할일 날짜 (YYYY-MM-DD)",
            "required": true,
            "type": "string",
            "example": "2021-09-21"
          },
          {
            "name": "subject",
            "in": "formData",
            "description": "할일명",
            "required": true,
            "type": "string"
          },
          {
            "name": "status",
            "in": "formData",
            "description": "할일 상태 (OPEN, COMPLETED)",
            "required": true,
            "type": "string",
            "example": "OPEN"
          },
          {
            "name": "taskDesc",
            "in": "formData",
            "description": "할일 설명",
            "required": false,
            "type": "string"
          },
          {
            "name": "dueDtime",
            "in": "formData",
            "description": "마감 기한 (YYYY-MM-DD HH:mm:ss)",
            "required": false,
            "type": "string"
          },
          {
            "name": "alarmDtime",
            "in": "formData",
            "description": "알림 일자 (YYYY-MM-DD HH:mm:ss)",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "[완료]게시물이 생성되었습니다",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          },
          "400": {
            "description": "[에러]게시물이 이미 존재합니다",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          },
          "500": {
            "description": "[에러]서버에 문제가 있어 게시물을 생성하지 못했습니다",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          }
        }
      }
